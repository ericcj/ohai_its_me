<div class="lifelog_post {{linked_account.type}}" data-href="{{permalink}}">
  <div class="media">
    {{#if photos}}
      {{#photos}}
        <a href="{{url}}" target="_blank"><img src='{{html}}' title='{{created_at}}' /></a>
      {{/photos}}
    {{else}}
      {{#render_media}}
        {{{html}}}
      {{/render_media}}
    {{/if}}
  </div>
  {{#if content}}
    <div class="lifelog_text">
      <p>{{{content}}}</p>
      <div class="permalink"><a href="{{permalink}}" target="_blank">link</a></div>
    </div>
  {{/if}}
</div>
